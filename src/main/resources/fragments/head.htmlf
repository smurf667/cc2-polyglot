		<script>
			const AnimationRegistry = {
				enter: {},
				exit: {},
				active: {},
				register: function (id, activator, deactivator, run) {
					AnimationRegistry.enter[id] = activator;
					AnimationRegistry.exit[id] = deactivator;
					if (run) {
						AnimationRegistry.active[id] = true;
						activator.apply();
					} else {
						AnimationRegistry.active[id] = false;
					}
				}
			};
		</script>
